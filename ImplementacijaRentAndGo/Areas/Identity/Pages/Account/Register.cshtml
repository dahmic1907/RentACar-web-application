@page
@model Tuple<ImplementacijaRentAndGo.Models.Gorivo, RegisterModel>


@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.Item2.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Item2.Input.Email"></label>
                <input asp-for="Item2.Input.Email" class="form-control" />
                <span asp-validation-for="Item2.Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item2.Input.Password"></label>
                <input asp-for="Item2.Input.Password" class="form-control" />
                <span asp-validation-for="Item2.Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item2.Input.ConfirmPassword"></label>
                <input asp-for="Item2.Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Item2.Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>

      
