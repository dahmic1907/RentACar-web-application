@model ImplementacijaRentAndGo.Models.IznajmljivanjeVozac
@{
    ViewData["Title"] = "Create";
}


@{
    ViewBag.Title = "Index";
}

<style>
    #prikaz-slika-vozila {
        width: 100%;
        height: auto;
    }
</style>

@{
    var data = ViewBag.Message;
}
@*<h3>ImeVozila: @data.ImeVozila</h3>
    <h3>SlikaVozila: @data.SlikaVozila</h3>*@


<h3>@data.ImeVozila</h3>
<hr />
<form asp-action="Create">
    <div class="container">
        <div class="row">
            <div class="col-6">
                <img id="prikaz-slika-vozila" src=@data.SlikaVozila class="rounded" alt="slika vozila">
            </div>
            <div class="col-3">
                <div class="form-group">
                    <label asp-for="Iznajmljivanje.DatumPreuzmanja" class="control-label">Datum Preuzmanja</label>
                    <input asp-for="Iznajmljivanje.DatumPreuzmanja" class="form-control" />
                    <span asp-validation-for="Iznajmljivanje.DatumPreuzmanja" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <label asp-for="Iznajmljivanje.Lokacija" class="control-label">Lokacija</label>
                    <select asp-for="Iznajmljivanje.Lokacija" class="form-control disabled" asp-items="Html.GetEnumSelectList<Lokacija>()" disabled>
                        <option selected="selected" value=@data.Lokacija>@data.Lokacija</option>
                    </select>
                    <span asp-validation-for="Iznajmljivanje.Lokacija" class="text-danger"></span>
                </div>
            </div>
            <div class="col-3">
                <div class="form-group">
                    <label asp-for="Iznajmljivanje.DatumVracanja" class="control-label">Datum Vracanja</label>
                    <input asp-for="Iznajmljivanje.DatumVracanja" class="form-control" />
                    <span asp-validation-for="Iznajmljivanje.DatumVracanja" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">

        </div>
    </div>
</form>

@foreach (var item in Model.Vozac)
{
<div class="container">
    <div class="card mb-3" style="width: 100%; height:100%">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img id="prikaz-slika-vozila" src="@Html.DisplayFor(modelItem => item.SlikaVozila)" class="rounded" alt="slika vozila">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"> @Html.DisplayFor(modelItem => item.Naziv)</h5>
                    <br>
                    <div class="row">
                        <div class="col-6 col-sm-4">
                            <i class="bi bi-box"> @Html.DisplayFor(modelItem => item.MaksimalanBrojPutnika) Sjedišta</i>
                        </div>
                        <div class="col-6 col-sm-4">
                            <i class="bi bi-snow3"> @Html.DisplayFor(modelItem => item.Klima) Klima</i>
                        </div>
                        <div class="col-6 col-sm-4">
                            <i class="bi bi-card-text">
                                <label class="font-italic">@Html.DisplayFor(modelItem => item.CijenaPoDanu)KM/DAN</label>

                            </i>
                        </div>


                        <!-- Force next columns to break to new line -->
                        <div class="w-100 d-none d-md-block"></div>

                        <div class="col-6 col-sm-4">
                            <i class="bi bi-gear"> @Html.DisplayFor(modelItem => item.Mjenjac)</i>
                        </div>
                        <div class="col-6 col-sm-4">
                            <i class="bi bi-card-text"> @Html.DisplayFor(modelItem => item.BrojRegistacijskihTablica)</i>
                        </div>
                        <div class="w-100 d-none d-md-block"></div>
                    </div>
                    <br>
                    <a asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Dodatne informacije</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Obriši</a>
                </div>
            </div>
        </div>
    </div>
</div>
}


