@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    function change(cijena) {
            var prije = document.getElementById("datumPreuzimanja").value;
            var date1 = new Date(prije);
            var poslije = document.getElementById("datumVracanja").value;
            var date2 = new Date(poslije);
            var Difference_In_Time = date2.getTime() - date1.getTime();
            var Difference_In_Days = (Difference_In_Time / (1000 * 3600 * 24)) * cijena;
            document.getElementById("myButton1").value = Difference_In_Days + "KM";
    }
</script>
