@model IEnumerable<ImplementacijaRentAndGo.Models.Iznajmljivanje>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista iznajmljivanja</h1>

<table class="table" style="border-collapse:collapse; border-color:dodgerblue">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IDKlijenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IDVozila)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lokacija)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stanje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NacinPlacanja)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDKlijenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDVozila)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lokacija)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stanje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NacinPlacanja)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Uredi</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Detalji</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Obriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
