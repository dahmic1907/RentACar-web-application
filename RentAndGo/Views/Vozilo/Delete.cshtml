@model RentAndGo.Models.Vozilo

@{
    ViewData["Title"] = "Delete";
}

<form asp-action="Delete">
    <div class="card">
        <div class="card-header">
            Brisanje vozila
        </div>
        <div class="card-body">
            <h5 class="card-title">Da li ste sigurni da želite obrisati vozilo?</h5>
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" onclick="prikaziInfo()" />
            <button asp-action="Index" class="btn btn-secondary">Nazad na listu</button>
        </div>
    </div>
</form>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>
    function prikaziInfo() {
        swal("Brisanje završeno!", "Uspješno ste obrisali vozilo.", "success");
    }
</script>
